	public void actionPerformed(ActionEvent evento) {
		
		if(evento.getSource() == btn_agregar){

			producto = new Producto(txt_nombre.getText(),txt_marca.getText(), txt_modelo.getText());

			conexion = new BDProducto();

			conexion.conectar();

			conexion.ingresarProducto(producto);
			

			JOptionPane.showMessageDialog(null, "Registro Exitoso");
			
		}
	}
	
	public static void main(String[] args) {
			
			new Pantalla_Ingreso_Inventario();
	
		}

