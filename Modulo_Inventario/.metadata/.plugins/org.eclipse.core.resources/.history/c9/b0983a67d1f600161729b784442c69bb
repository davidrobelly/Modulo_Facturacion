package Vista;

import java.awt.BorderLayout;
import java.awt.GridLayout;

import javax.swing.JButton;
import javax.swing.JComboBox;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;

@SuppressWarnings("serial")
public class Pantalla_Kardex extends JFrame{
	
	JPanel pnl_central, pnl_botones;
	JLabel lbl_tipo, lbl_fecha, lbl_producto, lbl_cantidad, lbl_preCompra, lbl_detalle;
	JComboBox<String> cbx_tipo;
	JTextField txt_fecha, txt_producto, txt_cantidad, txt_preCompra, txt_detalle;
	JButton btn_agregar, btn_consultar, btn_modificar;
	
	public Pantalla_Kardex (){
		
		super("Kardex - Entradas y Salidas");
		setSize(500, 300);
		setLocation(500, 300);
		setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
		
		//PANEL CENTRAL
		pnl_central = new JPanel(new GridLayout(6, 2));
		
		
		
		
		
		getContentPane().add(pnl_central, BorderLayout.CENTER);
		

	}
	

}
