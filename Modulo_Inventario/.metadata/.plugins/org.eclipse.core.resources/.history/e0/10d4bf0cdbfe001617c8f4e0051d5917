	public void limpiarPantalla(){
		
		cbx_categoria.setSelectedItem(null);
		txt_nombre.setText("");
		txt_marca.setText("");
		txt_modelo.setText("");
		txt_valor.setText("");
		txt_minimo.setText("");
		txt_maximo.setText("");
		tabla.setModel(jtproducto);
	}

	public void mouseClicked(MouseEvent evento) {
		
		int fila = tabla.rowAtPoint(evento.getPoint());
        txt_nombre.setText(tabla.getValueAt(fila, 0).toString());
        txt_marca.setText(tabla.getValueAt(fila, 1).toString());
        txt_modelo.setText(tabla.getValueAt(fila, 2).toString());
        txt_valor.setText(tabla.getValueAt(fila, 3).toString());
        txt_minimo.setText(tabla.getValueAt(fila, 4).toString());
        txt_maximo.setText(tabla.getValueAt(fila, 5).toString());
		
	}

	public void mouseEntered(MouseEvent e) {
		
	}

	public void mouseExited(MouseEvent e) {
		
	}

	public void mousePressed(MouseEvent e) {
		
	}

	public void mouseReleased(MouseEvent e) {
		
	}

	public void actionPerformed(ActionEvent evento) {
		
		if(evento.getSource() == btn_buscarMarca){
			
			String marcaB;
			marcaB = txt_marca.getText();
			
			if ("".equals(marcaB)){
				JOptionPane.showMessageDialog(null, "Llenar el campo de busqueda: marca");
				txt_marca.setText("");
			} else{
				Producto producto = new Producto();				
				ArrayList<Producto> listaProductoMarca = producto.listarProductosxMarca(marcaB);
				Tabla_Producto_Consulta tablaProMarca = new Tabla_Producto_Consulta(listaProductoMarca);
				tabla.removeAll();
				tabla.setModel(tablaProMarca);
				tabla.updateUI();
			}
		
		
		}
		
		if(evento.getSource() == btn_buscarModelo){
			
			String modeloB;
			modeloB = txt_modelo.getText();
			
			if ("".equals(modeloB)){
				JOptionPane.showMessageDialog(null, "Llenar el campo de busqueda: modelo");
				txt_modelo.setText("");
			} else{
				Producto producto = new Producto();
				ArrayList<Producto> listaProductoModelo = producto.listarProductosxModelo(modeloB);
				Tabla_Producto_Consulta tablaProModelo = new Tabla_Producto_Consulta(listaProductoModelo);
				tabla.removeAll();
				tabla.setModel(tablaProModelo);
				tabla.updateUI();
			}
		}
		
		if(evento.getSource() == btn_limpiar){			
			
			limpiarPantalla();
			
		}
		
		if(evento.getSource() == btn_salir){
			this.dispose();

		}
		
	}

}
