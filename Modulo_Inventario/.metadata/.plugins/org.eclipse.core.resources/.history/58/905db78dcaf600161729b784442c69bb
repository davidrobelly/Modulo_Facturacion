		btn_buscarCategoria = new JButton("..");
		btn_buscarCategoria.setVisible(false);
		btn_buscarNombre = new JButton("..");
		btn_buscarNombre.setVisible(false);
		btn_buscarMarca = new JButton("..");
		btn_buscarMarca.addActionListener(this);
		btn_buscarModelo = new JButton("..");
		btn_buscarPrecio = new JButton("..");
		btn_buscarPrecio.setVisible(false);
		btn_buscarNumSerie = new JButton("..");
		btn_buscarColor = new JButton("..");
		btn_buscarMinimo = new JButton("..");
		btn_buscarMinimo.setVisible(false);
		btn_buscarMaximo = new JButton("..");
		btn_buscarMaximo.setVisible(false);
		
		pnl_infoIroducto.add(lbl_categoria);
		pnl_infoIroducto.add(cbx_categoria);
		pnl_infoIroducto.add(btn_buscarCategoria);
