package Vista;

import java.awt.BorderLayout;
import java.awt.GridLayout;

import javax.swing.BorderFactory;
import javax.swing.ImageIcon;
import javax.swing.JButton;
import javax.swing.JComboBox;
import javax.swing.JComponent;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;

@SuppressWarnings("serial")
public class Pantalla_Kardex extends JFrame{
	
	JPanel pnl_central, pnl_botones;
	JLabel lbl_tipo, lbl_fecha, lbl_producto, lbl_cantidad, lbl_preCompra, lbl_detalle;
	JComboBox<String> cbx_tipo;
	JTextField txt_fecha, txt_producto, txt_cantidad, txt_preCompra, txt_detalle;
	JButton btn_agregar, btn_consultar, btn_modificar;
	
	public Pantalla_Kardex (){
		
		super("Kardex - Entradas y Salidas");
		setSize(500, 300);
		setLocation(500, 300);
		setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
		
		//PANEL CENTRAL
		pnl_central = new JPanel(new GridLayout(6, 2, 10, 10));
		
		lbl_tipo = new JLabel("Tipo :");
		lbl_fecha = new JLabel("Fecha :");
		lbl_producto = new JLabel("Producto :");
		lbl_cantidad = new JLabel("Cantidad :");
		lbl_preCompra = new JLabel("Precio de compra :");
		lbl_detalle = new JLabel("Detalle :");
		
		cbx_tipo = new JComboBox<String>();
		cbx_tipo.addItem("INGRESO");
		cbx_tipo.addItem("EGRESO");
		
		txt_fecha = new JTextField();
		txt_producto = new JTextField();
		txt_cantidad = new JTextField();
		txt_preCompra = new JTextField();
		txt_detalle = new JTextField();
		
		pnl_central.add(lbl_tipo);
		pnl_central.add(cbx_tipo);
		pnl_central.add(lbl_fecha);
		pnl_central.add(txt_fecha);
		pnl_central.add(lbl_producto);
		pnl_central.add(txt_producto);
		pnl_central.add(lbl_cantidad);
		pnl_central.add(txt_cantidad);
		pnl_central.add(lbl_preCompra);
		pnl_central.add(txt_preCompra);
		pnl_central.add(lbl_detalle);
		pnl_central.add(txt_detalle);
		
		//PANEL BOTONES
		pnl_botones = new JPanel(new GridLayout(1, 3, 10, 10));
		
		btn_agregar = new JButton(new ImageIcon("src/Imagenes/limpiar.jpeg"));
		btn_consultar = new JButton(new ImageIcon("src/Imagenes/limpiar.jpeg"));
		btn_modificar = new JButton(new ImageIcon("src/Imagenes/limpiar.jpeg"));
		
		pnl_botones.add(btn_agregar);
		pnl_botones.add(btn_consultar);
		pnl_botones.add(btn_modificar);		
		
		getContentPane().add(pnl_central, BorderLayout.CENTER);
		getContentPane().add(pnl_botones, BorderLayout.SOUTH);
		
		((JComponent)getContentPane()).setBorder(BorderFactory.createEmptyBorder(10, 10, 10, 10));
	}
	

}
