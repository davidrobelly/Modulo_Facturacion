package MonroyRobelly.Vista;

import javax.swing.ImageIcon;
import javax.swing.JButton;

public class Botones extends JButton {
	

	public void buildButton(JButton boton, ImageIcon image, boolean area, boolean border)  
	{
		boton.setIcon(image);
		boton.setContentAreaFilled(area);
		boton.setBorderPainted(border);
	}
	
	public void buildButtonJ(JButton boton, boolean area, boolean border, boolean visible)  
	{
		boton.setContentAreaFilled(area);
		boton.setBorderPainted(border);
		boton.setVisible(visible);
	}
	
	public void buildButtonB(JButton boton, ImageIcon image, String mensaje)  
	{
		boton.setIcon(image);
		boton.setToolTipText(mensaje);
	}
	
	public void buildButtonA(JButton boton, ImageIcon image, boolean area, boolean border, boolean visible)  
	{
		boton.setIcon(image);
		boton.setContentAreaFilled(area);
		boton.setBorderPainted(border);
		boton.setVisible(visible);
	}
	
	public void buildButtonNJ(JButton boton, ImageIcon image)  
	{
		boton.setIcon(image);
	}


}
