package MonroyRobelly.Control;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.sql.SQLException;

import javax.swing.JOptionPane;

import MonroyRobelly.Vista.Ventana_Inicio;
import MonroyRobelly.Vista.Ventana_Op_Juego;
import MonroyRobelly.Vista.Ventana_Puntajes;

public class Control_Ventana_Inicio implements ActionListener {
	
	Ventana_Inicio vista;
	Ventana_Op_Juego juego;
	Ventana_Puntajes puntajes;
	
	public Control_Ventana_Inicio(Ventana_Inicio vista) {
		this.vista=vista;
		
	}

	@Override
	public void actionPerformed(ActionEvent e) {
		
		Object boton = e.getSource();
		
		if (boton == vista.btnEmpezar)
		{
			System.out.println("escoge el juego");
			juego = new Ventana_Op_Juego ();
			juego.setVisible(true);
			vista.dispose();
		}
		
		if (boton == vista.btnPuntuaciones)
		{
			System.out.println("puntuaciones");
			
			puntajes = new Ventana_Puntajes ();
			puntajes.setVisible(true);
		}
		
		if (boton == vista.btnSalir)
		{
			JOptionPane.showMessageDialog( null, "Hasta la Vista" );
			vista.dispose();
		}
	}

}
