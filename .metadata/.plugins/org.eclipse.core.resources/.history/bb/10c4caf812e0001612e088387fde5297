package Vista;

import java.awt.GridBagConstraints;
import java.awt.GridBagLayout;
import java.awt.GridLayout;
import java.awt.Insets;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.Border;
import javax.swing.border.EtchedBorder;
import javax.swing.border.TitledBorder;

import MonroyRobelly.Control.Control_Ventana_OPJuego;

public class Ventana_Op_Juego extends JFrame {
	
	public JPanel panelBotones;
	public PanelOpJuegos panelOp = new PanelOpJuegos();
	public JButton btnJugar, btnRegresar, btnBorrar, btnRegJug;
	
	PanelSup panelInfo = new PanelSup ();
	Control_Ventana_OPJuego control;
	
	void buildConstraints(GridBagConstraints gbc, int gx, 
			int gy, int gw, int gh) 
	{
		gbc.gridx = gx;
		gbc.gridy = gy;
		gbc.gridwidth = gw;
		gbc.gridheight = gh;
	}
	
	public Ventana_Op_Juego (){
		
		ventana();
		initcomponentes();
	
		control = new Control_Ventana_OPJuego(this);
		
		
		//Pane de Información
		panelInfo.setLayout(new GridLayout(4,0));
		
		//Panel Central
		GridBagLayout OpcionesJ = new GridBagLayout();
		panelOp.setLayout(OpcionesJ);
				
		GridBagConstraints formato = new GridBagConstraints();
		formato.fill = GridBagConstraints.BOTH ;
		formato.weightx = 1;
		formato.weighty = 1;
					
		formato.insets = new Insets (5,5,5,5);
		formato.ipadx =	5;
		formato.ipady = 5;
		
		buildConstraints(formato, 0, 0, 2, 1);
		panelOp.add(panelOp.lbljuegos);
		OpcionesJ.setConstraints(panelOp.lbljuegos, formato);
		
		buildConstraints(formato, 2, 0, 2, 1);
		panelOp.add(panelOp.cmbjuegos);
		OpcionesJ.setConstraints(panelOp.cmbjuegos, formato);
		
		buildConstraints(formato, 0, 1, 2, 1);
		panelOp.add(panelOp.lblcantJugadores);
		OpcionesJ.setConstraints(panelOp.lblcantJugadores, formato);
		
		buildConstraints(formato, 2, 1, 2, 1);
		panelOp.add(panelOp.cmbcantJugadores);
		OpcionesJ.setConstraints(panelOp.cmbcantJugadores, formato);
		
		buildConstraints(formato, 0, 2, 4, 1);
		panelOp.add(panelOp.lbljugadores);
		OpcionesJ.setConstraints(panelOp.lbljugadores, formato);
		
		buildConstraints(formato, 0, 3, 2, 1);
		panelOp.add(panelOp.cmbjugadores);
		OpcionesJ.setConstraints(panelOp.cmbjugadores, formato);
		
		buildConstraints(formato, 2, 3, 2, 1);
		panelOp.add(panelOp.btnjugador);
		OpcionesJ.setConstraints(panelOp.btnjugador, formato);
		
		buildConstraints(formato, 0, 4, 1, 1);
		panelOp.add(panelOp.jugadores.get(0));
		OpcionesJ.setConstraints(panelOp.jugadores.get(0), formato);
		
		buildConstraints(formato, 1, 4, 1, 1);
		panelOp.add(panelOp.jugadores.get(1));
		OpcionesJ.setConstraints(panelOp.jugadores.get(1), formato);
		
		buildConstraints(formato, 2, 4, 1, 1);
		panelOp.add(panelOp.jugadores.get(2));
		OpcionesJ.setConstraints(panelOp.jugadores.get(2), formato);
		
		buildConstraints(formato, 3, 4, 1, 1);
		panelOp.add(panelOp.jugadores.get(3));
		OpcionesJ.setConstraints(panelOp.jugadores.get(3), formato);
	
		buildConstraints(formato, 0, 5, 1, 1);
		panelOp.add(panelOp.Numjugadores.get(0));
		OpcionesJ.setConstraints(panelOp.Numjugadores.get(0), formato);
		
		buildConstraints(formato, 1, 5, 1, 1);
		panelOp.add(panelOp.Numjugadores.get(1));
		OpcionesJ.setConstraints(panelOp.Numjugadores.get(1), formato);
		
		buildConstraints(formato, 2, 5, 1, 1);
		panelOp.add(panelOp.Numjugadores.get(2));
		OpcionesJ.setConstraints(panelOp.Numjugadores.get(2), formato);
		
		buildConstraints(formato, 3, 5, 1, 1);
		panelOp.add(panelOp.Numjugadores.get(3));
		OpcionesJ.setConstraints(panelOp.Numjugadores.get(3), formato);
		
		//panel Sur
		
		panelBotones.setLayout(new GridLayout(0,4));
		panelBotones.add(btnRegresar);
		panelBotones.add(btnJugar);
		panelBotones.add(btnBorrar);
		panelBotones.add(btnRegJug);
		
		this.getContentPane().add(panelInfo, "North");
		this.getContentPane().add(panelOp, "Center");
		this.getContentPane().add(panelBotones, "South");
		
		//eventos
		btnRegresar.addActionListener(control);
		btnJugar.addActionListener(control);
		btnJugar.setEnabled(false);
		panelOp.btnjugador.addActionListener(control);
		btnBorrar.addActionListener(control);
		btnBorrar.setEnabled(false);
		btnRegJug.addActionListener(control);
		
		pack();	
	}

	private void initcomponentes() {
        
        btnJugar = new JButton ("Iniciar Partida");
        btnRegresar = new JButton ("Atrás");
        btnBorrar = new JButton ("Borrar Datos");
        btnRegJug = new JButton ("Registrar Jugador");

 
        panelBotones = new JPanel();
       
        Border bordejpanel = new TitledBorder(new EtchedBorder(), " ");
		panelBotones.setBorder(bordejpanel);
		panelInfo.setBorder(bordejpanel);
	}


	private void ventana() {
		
		this.pack();
		this.setLocationRelativeTo(null);
		this.setTitle("Ajustes del Juego");
		this.setVisible(true);
		this.setDefaultCloseOperation(DISPOSE_ON_CLOSE);
		this.setLocationRelativeTo(null);
		this.setResizable(false);
		
	}
	

}
