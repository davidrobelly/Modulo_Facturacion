package pantallas;

import java.awt.GridLayout;

import javax.swing.JButton;
import javax.swing.JComboBox;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTextField;

public class ventana_ingreso_clientes extends JFrame{
	
	private JPanel PanelCentral, PanelBotones;
	private JButton btnregistrar, btncancelar, btnborrar;
	private JLabel lblnombre, lbldireccion, lbltelefono, lblcedula, lblestado, lbltipo, lblcorreo;
	private JTextField txtnombre, txtdireccion, txttelefono, txtcedula, txtcorreo;  
	private JComboBox cmbtipo, cmbestado;
	
	public ventana_ingreso_clientes () {
		
		initcomponents ();
		ventana();
		
		PanelCentral.setLayout(new GridLayout(7,2));
		PanelBotones.setLayout(new GridLayout(3,1));
		
		PanelCentral.add(lblnombre);
		PanelCentral.add(txtnombre);
		
		
	}
	
	
	
	
	
	private void ventana() {
		
		this.setLocationRelativeTo(null);
		this.pack();
		this.setTitle("Registro de Clientes");
		this.setVisible(true);
		this.setDefaultCloseOperation(DISPOSE_ON_CLOSE);
		this.setSize(400, 165);
		this.setLocation(500, 200);
		this.setResizable(false);
		
	}
	
	private void initcomponents () {
		
		PanelCentral = new JPanel();
		PanelBotones = new JPanel();
		btnregistrar = new JButton("Registrar");
		btncancelar = new JButton("Cancelar");
		btnborrar = new JButton("Borrar");
		txtnombre = new JTextField();
		txtdireccion = new JTextField();
		txttelefono = new JTextField();
		txtcedula = new JTextField();
		txtcorreo = new JTextField();
		cmbestado = new JComboBox ();
		cmbtipo = new JComboBox ();
	}
	

}
