package MonroyRobelly.Modelo.Juegos;


import java.util.Vector;

import MonroyRobelly.Modelo.Campeonato.Jugador;
import MonroyRobelly.Modelo.Campeonato.Partida;


public abstract class Juego {
	
	private String nombre;
	private int nroCartas = 5;
	private int nroJugadores;
	private Partida partida;
	
	
	public Juego(String nombre, int nroJugadores) {
		super();
		this.setNombre(nombre);
		this.setNroJugadores(nroJugadores);
	}
	
	
	public Partida getPartida() {
		return partida;
	}
	
	
	public int getNroJugadores() {
		return nroJugadores;
	}


	public void setNroJugadores(int nroJugadores) {
		if(nroJugadores > 1 && nroJugadores < 5){
			this.nroJugadores = nroJugadores;
		}
	}


	public void setPartida(Partida partida) {
		if(partida != null){
			this.partida = partida;
		}
	}


	public String getNombre() {
		return nombre;
	}
	public void setNombre(String nombre) {
		if(nombre != null){
			this.nombre = nombre;
		}
	}
	public int getNroCartas() {
		return nroCartas;
	}
	
	
	public abstract int obtenerGanador(Vector<Jugador> jugadores);

}
