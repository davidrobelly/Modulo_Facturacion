package Modelo.Juegos;


import java.util.Scanner;
import java.util.Vector;

import MonroyRobelly.Modelo.Campeonato.Jugador;


public class NumeroRepetido extends Juego {
	int indGanador, contador;
	//boolean proceso = false;
	

	/*
	 * Este juego consiste en que si el jugador tiene en su mano una carta 
	 * del mismo numero y color solicitado tres veces, gana
	 *  
	 */

	public NumeroRepetido(String nombre,int nroJugadores) {
		super(nombre,nroJugadores);
	}

	@Override
	
	public int obtenerGanador(Vector<Jugador> jugadores) {
	
		Vector <Integer> ManoGanadora = new Vector <Integer> (jugadores.size());
		
		//ingreso por teclado
	
		//if (proceso == false)
		//{
			System.out.print("ingrese el número a comparar: ");
			int numero = 0;
			Scanner sc = new Scanner (System.in); 	
			
			try {
				numero = sc.nextInt (); 
				
			} catch (Exception e) {
				
			}
			String numeroString = Integer.toString(numero);
			System.out.print("");
			System.out.print("ingrese el color a comparar: ");
			String color = "";
			try {
				Scanner sc1 = new Scanner (System.in); 	
				color = sc1.nextLine ();
			} catch (Exception e) {
				
			}
			 		
	        for (int i = 0; i < getNroJugadores(); i++) 
			{
				for (int j = 0; j < getNroCartas(); j++)
				{
//					System.out.println(jugadores.get(0).getMano().getManoDeCartas().get(j).getNumero());
//					System.out.println(jugadores.get(0).getMano().getManoDeCartas().get(j).getColor());
					int a = jugadores.get(i).getMano().getManoDeCartas().get(j).getNumero();
					String NumeroCartaString = Integer.toString(a);
					
					if (NumeroCartaString.contains(numeroString) && 
						jugadores.get(i).getMano().getManoDeCartas().get(j).getColor().contains(color)) 
					{
						contador += 1;
						//System.out.println(contador);
						ManoGanadora.add(contador);
					}
					else
						contador = 0;
						//System.out.println(contador);
						ManoGanadora.add(contador);
				}
			}
	 
			for (int i = 0; i < jugadores.size(); i++) 
			{
				if (ManoGanadora.get(i) == 3) 
				{
					indGanador = i;
					//System.out.println(indGanador);
					break;
				}	
				else
					System.out.println("No hay ganadores");
					indGanador = 5;
				break;
//				else
//					System.out.println("El jugador " +jugadores.get(i).getNombre()+ " No tiene la carta en Mano");
			}
			//proceso = true ;
		//}
//			System.out.println(indGanador);
		return indGanador;	
	}
}
