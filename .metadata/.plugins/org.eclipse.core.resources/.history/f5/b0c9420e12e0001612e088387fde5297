package MonroyRobelly.Threads;

import MonroyRobelly.Control.Control_VentanaMesaDeJuego;
import MonroyRobelly.Vista.Ventana_MesaDeJuego;

public class Threads_MostrarMano implements Runnable {

	Ventana_MesaDeJuego mesajuego;
	Control_VentanaMesaDeJuego controlmesa;
	
	int MAX = 5;
	
	public Threads_MostrarMano(Ventana_MesaDeJuego mesajuego) {
		this.mesajuego=mesajuego;
	}
	
	@Override
	public void run() {
		
		
		mesajuego.panelS.Atras.setEnabled(false);
		mesajuego.panelS.Go.setEnabled(false);
		mesajuego.panelS.Repartir.setEnabled(false);
		
		for (int i = 0; i < MAX; i++) 
		{
			try
			{
				Thread.sleep(80);
				
			} catch (InterruptedException ex) {
				ex.printStackTrace();
			}
			
			if (mesajuego.panelS.jugadoresP.get(0).isVisible())
			{
				mesajuego.panelS.cartasMano1.get(i).setVisible(true);
				mesajuego.panelS.cartasMano1.get(i).setFocusable(true);
				mesajuego.pack();
			}
			
			if (mesajuego.panelS.jugadoresP.get(1).isVisible())
			{
				mesajuego.panelS.cartasMano2.get(i).setVisible(true);
				mesajuego.panelS.cartasMano2.get(i).setFocusable(true);
				mesajuego.pack();
			}
			
			if (mesajuego.panelS.jugadoresP.get(2).isVisible())
			{
				mesajuego.panelS.cartasMano3.get(i).setVisible(true);
				mesajuego.panelS.cartasMano3.get(i).setFocusable(true);
				mesajuego.pack();
			}
			
			if (mesajuego.panelS.jugadoresP.get(3).isVisible())
			{
				mesajuego.panelS.cartasMano4.get(i).setVisible(true);
				mesajuego.panelS.cartasMano4.get(i).setFocusable(true);
				mesajuego.pack();
			}	
		}
		mesajuego.panelS.Atras.setEnabled(true);
		mesajuego.panelS.Go.setEnabled(true);
		mesajuego.panelS.Repartir.setEnabled(true);
		
	}

}
