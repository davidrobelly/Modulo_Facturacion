package MonroyRobelly.Vista;

import javax.swing.JPanel;
import javax.swing.border.Border;
import javax.swing.border.EtchedBorder;
import javax.swing.border.TitledBorder;

public class Panel_Control_Baraja extends JPanel {
	
	Imagenes_V img = new Imagenes_V ();
	
	public Botones btnOrdenar, btnBarajar, btnArchivo, btn;
	
	public Panel_Control_Baraja () {
		
		btn = new Botones();
		btn.buildButtonB(btnArchivo = new Botones(), img.getGuardar(), "Guardar Baraja");
		btn.buildButtonB(btnOrdenar = new Botones(), img.getOrdenar(), "Ordenar Baraja");
		btn.buildButtonB(btnBarajar = new Botones(), img.getBarajar(), "Barajar");
		
		this.add(btnBarajar);
		this.add(btnOrdenar);
		this.add(btnArchivo);
		
		Border bordejpanel = new TitledBorder(new EtchedBorder(), " ");
		this.setBorder(bordejpanel);
	}
}
