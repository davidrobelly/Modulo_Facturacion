package MonroyRobelly.Vista;

import java.awt.GridBagConstraints;
import java.awt.GridBagLayout;
import java.awt.GridLayout;
import java.awt.Insets;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;

import MonroyRobelly.Control.Control_Ventana_NJugadores;
import MonroyRobelly.Control.Control_Ventana_OPJuego;

public class Ventana_Nuevo_Jugador extends JFrame {
	
	public JPanel PanelBotones;
	public Botones btn, btnRegistrar, btnAtras, btnBorrar;
	PanelSup panelInfo = new PanelSup ();
	Imagenes_V img = new Imagenes_V();
	public Panel_NJ PanelNJ = new Panel_NJ();
	
	Control_Ventana_NJugadores control;
	
	void buildConstraints(GridBagConstraints gbc, int gx, 
			int gy, int gw, int gh) 
	{
		gbc.gridx = gx;
		gbc.gridy = gy;
		gbc.gridwidth = gw;
		gbc.gridheight = gh;
	}
	
	public Ventana_Nuevo_Jugador () {
		
		ventana();
		declaraciones();
		
		control = new Control_Ventana_NJugadores(this);
		
		//Pane de Información
		panelInfo.setLayout(new GridLayout(4,0));
		
		//Panel Central
		GridBagLayout Jugador = new GridBagLayout();
		PanelNJ.setLayout(Jugador);
						
		GridBagConstraints formato = new GridBagConstraints();
		formato.fill = GridBagConstraints.BOTH ;
		formato.weightx = 1;
		formato.weighty = 1;
							
		formato.insets = new Insets (5,5,5,5);
		formato.ipadx =	5;
		formato.ipady = 5;
				
		buildConstraints(formato, 0, 0, 2, 1);
		PanelNJ.add(PanelNJ.lbltitulo);
		Jugador.setConstraints(PanelNJ.lbltitulo, formato);
		
		buildConstraints(formato, 0, 1, 1, 1);
		PanelNJ.add(PanelNJ.Nombres);
		Jugador.setConstraints(PanelNJ.Nombres, formato);
		
		buildConstraints(formato, 1, 1, 1, 1);
		PanelNJ.add(PanelNJ.txtNombre);
		Jugador.setConstraints(PanelNJ.txtNombre, formato);
		
		buildConstraints(formato, 0, 2, 1, 1);
		PanelNJ.add(PanelNJ.pjugadas);
		Jugador.setConstraints(PanelNJ.pjugadas, formato);
		
		buildConstraints(formato, 1, 2, 1, 1);
		PanelNJ.add(PanelNJ.txtpj);
		Jugador.setConstraints(PanelNJ.txtpj, formato);
		
		buildConstraints(formato, 0, 3, 1, 1);
		PanelNJ.add(PanelNJ.pganadas);
		Jugador.setConstraints(PanelNJ.pganadas, formato);
		
		buildConstraints(formato, 1, 3, 1, 1);
		PanelNJ.add(PanelNJ.txtpg);
		Jugador.setConstraints(PanelNJ.txtpg, formato);
		
		buildConstraints(formato, 0, 4, 1, 1);
		PanelNJ.add(PanelNJ.pperdidas);
		Jugador.setConstraints(PanelNJ.pperdidas, formato);
		
		buildConstraints(formato, 1, 4, 1, 1);
		PanelNJ.add(PanelNJ.txtpp);
		Jugador.setConstraints(PanelNJ.txtpp, formato);
		
		buildConstraints(formato, 0, 5, 1, 1);
		PanelNJ.add(PanelNJ.genero);
		Jugador.setConstraints(PanelNJ.genero, formato);
		
		buildConstraints(formato, 1, 5, 1, 1);
		PanelNJ.add(PanelNJ.cmbgenero);
		Jugador.setConstraints(PanelNJ.cmbgenero, formato);
		
		//panel Sur
		
		PanelBotones.setLayout(new GridLayout(0,3));
		PanelBotones.add(btnRegistrar);
		PanelBotones.add(btnAtras);
		PanelBotones.add(btnBorrar);
				
		this.getContentPane().add(panelInfo, "North");
		this.getContentPane().add(PanelNJ, "Center");
		this.getContentPane().add(PanelBotones, "South");
				
		//eventos
		btnRegistrar.addActionListener(control);
		btnAtras.addActionListener(control);
		btnBorrar.addActionListener(control);
				
		pack();	
		
		
	}

	private void declaraciones() {
		
		PanelBotones = new JPanel ();
		
		btn = new Botones();
		btn.buildButtonB(btnRegistrar = new Botones(), img.getImgregistrar(), "Registrar");
		btn.buildButtonB(btnAtras = new Botones(), img.getImgatras(), "Inicio");
		btn.buildButtonB(btnBorrar = new Botones(), img.getImgborrar(), "Borrar Datos");
		
	}

	private void ventana() {
		
		this.setLocationRelativeTo(null);
		this.pack();
		this.setTitle("Registro de Jugadores");
		this.setVisible(true);
		this.setDefaultCloseOperation(DISPOSE_ON_CLOSE);
		this.setSize(280, 420);
		this.setResizable(false);
		
	}

}
