package MonroyRobelly.Vista;

import java.util.Vector;

import javax.swing.ImageIcon;
import javax.swing.JButton;
import javax.swing.JPanel;
import javax.swing.border.Border;
import javax.swing.border.EtchedBorder;
import javax.swing.border.TitledBorder;

public class Panel_Barajas extends JPanel {
	
	public static final String dirImagenes = "src/MonroyRobelly/imagenes/";
	public Vector <JButton> cartas = new Vector <JButton> ();
	static final int MAX = 52;
	
	public Panel_Barajas () 
	{
		Border bordejpanel = new TitledBorder(new EtchedBorder(), " ");
		this.setBorder(bordejpanel);
		
		VoltearBaraja();
	}
	
	public void CargarBaraja(){
		
		for (int i = 0; i <MAX; i++) 
		{
			cartas.addElement(new JButton());
			
			if (i>=0 && i<13) {
				int j=(i+1);
				cartas.get(i).setIcon(new ImageIcon(dirImagenes+j+"c.jpg"));
				cartas.get(i).setName(""+i);
			} 
			if (i>=13 && i<26) {
				int j=(i-13)+1;
				cartas.get(i).setIcon(new ImageIcon(dirImagenes+j+"s.jpg"));
				cartas.get(i).setName(""+i);
			} 
			if (i>=26 && i<39) {
				int j=i-26+1;
				cartas.get(i).setIcon(new ImageIcon(dirImagenes+j+"d.jpg"));
				cartas.get(i).setName(""+i);
			} 
			if (i>=39 && i<=52) {
				int j=i-39+1;
				cartas.get(i).setIcon(new ImageIcon(dirImagenes+j+"h.jpg"));
				cartas.get(i).setName(""+i);
			}
		}	
		MostrarBotones();
	}
	
	public void MostrarBotones(){
		
		for (int i = 0; i <MAX; i++) 
		{
			cartas.get(i).setVisible(false);
			cartas.get(i).setContentAreaFilled(false);
			cartas.get(i).setBorderPainted(false);
			this.add(cartas.get(i));
		}	
	}
	
	
	public void VoltearBaraja(){
		
		for (int i = 0; i <52; i++) 
		{
			cartas.addElement(new JButton(""));
			cartas.get(i).setIcon(new ImageIcon(dirImagenes+"reverso.jpg"));
			cartas.get(i).setVisible(true);
			cartas.get(i).setContentAreaFilled(false);
			cartas.get(i).setBorderPainted(true);
			this.add(cartas.get(i));
		}	
		this.MostrarBotones();
	}


}
