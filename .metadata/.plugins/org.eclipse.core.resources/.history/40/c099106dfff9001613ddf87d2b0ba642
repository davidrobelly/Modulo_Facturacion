package controles;

import java.awt.event.MouseEvent;
import java.awt.event.MouseListener;

import pantallas.Modificar_Clientes;
import pantallas.Pantalla_Consulta;
import pantallas.Ventana_Ingreso_Factura;

public class Control_Pantalla_Consulta implements MouseListener {

	Pantalla_Consulta pantalla;
	
	public Control_Pantalla_Consulta (Pantalla_Consulta vista)
	{
		this.pantalla = vista;
	}
	
	@Override
	public void mouseClicked(MouseEvent e) {
		
		int fila = pantalla.tableConsulta.rowAtPoint(e.getPoint());
		String h = pantalla.tableConsulta.getValueAt(fila, 0).toString();
		pantalla.txtcliente.setText(h);
		pantalla.add(pantalla.txtcliente);
	}

	@Override
	public void mouseEntered(MouseEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void mouseExited(MouseEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void mousePressed(MouseEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void mouseReleased(MouseEvent arg0) {
		// TODO Auto-generated method stub
		
	}

}
