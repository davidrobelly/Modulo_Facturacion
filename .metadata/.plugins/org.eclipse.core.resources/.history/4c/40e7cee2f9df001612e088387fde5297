package MonroyRobelly.Modelo.Juegos;

import java.util.Scanner;
import java.util.Vector;

import MonroyRobelly.Modelo.Campeonato.Jugador;


public class ElColorMayor extends Juego {
	//boolean proceso = false;
	int valorMin=999, indiceGanador;
	
	/*
	 * En este juego gana el jugador cuya suma de cartas de un color definido en el juego 
	 * que esten en la mano sea la mas baja.
	 */

	public ElColorMayor(String nombre,int nroJugadores) {
		super(nombre, nroJugadores);
		
	}

	@Override
	public int obtenerGanador(Vector<Jugador> jugadores) {
		
		Vector <Integer> total = new Vector <Integer> ();
		Vector <Integer> totalSuma = new Vector <Integer> ();
		
		//if (proceso == false)
		//{
			System.out.print("ingrese el color: ");
			String color;
	        Scanner sc = new Scanner (System.in);
	        color = sc.nextLine ();
	 
			for (int i = 0; i < jugadores.size();i++) 
			{
				for (int j = 0; j < getNroCartas(); j++)
				{
					//System.out.println(color);
					//System.out.println(jugadores.get(i).getMano().getManoDeCartas().get(j).getColor());
					if (jugadores.get(i).getMano().getManoDeCartas().get(j).getColor().contains(color))
					{
						int valor = jugadores.get(i).getMano().getManoDeCartas().get(j).getNumero();
						//System.out.println(valor);
						total.add(valor);
					}					
//					else
//						System.out.println("No es de color " +color+ " la carta:"
//						+ " " +j+ " de la mano del jugador: " +jugadores.get(i).getNombre());
				}
				
				for (int j = 0; j < total.size(); j++) {
					int suma = 0;
					suma = suma + total.get(j);
					//System.out.println(suma);
					totalSuma.add(suma);
				}
			}
			
			for (int i = 0; i < totalSuma.size(); i++) {
				if (totalSuma.get(i) < valorMin) 
				{
					valorMin= totalSuma.get(i);	
					indiceGanador=i;
					//System.out.print(indiceGanador);
				}
			}
			//proceso = true;
		//}
			//System.out.print(indiceGanador);
		return indiceGanador;

	}

}
