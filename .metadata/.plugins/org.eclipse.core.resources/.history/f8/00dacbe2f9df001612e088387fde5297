package MonroyRobelly.Modelo.Juegos;


import java.util.Vector;

import MonroyRobelly.Modelo.Campeonato.Jugador;


public class ManitosPares extends Juego{
	//boolean proceso = false;
	/*
	 * En este juego gana la persona cuya suma de cartas en 
	 * mano sea mayor y sea un número par
	 */

	public ManitosPares(String nombre, int nroJugadores) {
		super(nombre,nroJugadores);
	}

	@Override
	public int obtenerGanador(Vector<Jugador> jugadores) 
	{
		Vector<Integer> total = new Vector<Integer>(); 
		//Cada espacio del vector guarda la suma de cartas 
		//del jugador respectivo
		
		int valorMax=0, indiceGanador=0;						
		//if (proceso == false)
		//{
			for (int i = 0; i < jugadores.size();i++)
			{
				total.add(jugadores.get(i).getMano().sumarCartas());		
				System.out.println("La suma de las cartas de la mano del jugador " +jugadores.get(i).getNombre()
						+ " es de: " +jugadores.get(i).getMano().sumarCartas());
			}
			for (int i = 0; i < total.size(); i++) {
				if (total.get(i) > valorMax && total.get(i)%2 == 0) 
				{															//Recorremos el vector con el fin de encontrar el ganador
					valorMax=total.get(i);									//Guardando la poscion en el que se encuentra y su total
					indiceGanador=i;
				}
			}
			//proceso = true;
		//}
	return indiceGanador;
	}

}
