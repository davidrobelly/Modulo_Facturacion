package MonroyRobelly.Vista;

import java.awt.Font;

import javax.swing.JTextField;

public class TextBox extends JTextField
{
	
	public void buildTextField (JTextField txt, boolean editable, Font fuente ) {
		
		txt.setEditable(editable);
		txt.setFont(fuente);
	}
	
	public void buildETextField (JTextField txt, Font fuente ) {
		
		txt.setFont(fuente);
	}

}
